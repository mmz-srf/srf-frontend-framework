<div class="sticky-bar {{ styleModifier|default('') }}">
    <div class="sticky-bar__inner-wrapper">
        <div class="sticky-bar__title">
            {{ title|default('') }}
        </div>

        <a href="#" class="sticky-bar__close">
            {% include 'atoms-icon-button' with {
                'styleModifier': 'icon-button--collapsing-text-mobile',
                'iconStyleModifier': 'svg-icon--close-dark',
                'buttonText': 'Schliessen'
            } %}
        </a>

        <div class="sticky-bar__content sticky-bar__content--horizontal">
            {% block content %}
                {% include 'molecules-teaser' with {
                    'styleModifier': 'teaser--size-s teaser--no-medium-on-mobile teaser--alternative-interaction-design sticky-bar__teaser',
                    'teaser': collections[0].teasers[0]
                } %}

                <span class="vertical-separator sticky-bar__separator"></span>

                {% include 'molecules-teaser' with {
                    'styleModifier': 'teaser--size-s teaser--no-medium-on-mobile teaser--alternative-interaction-design sticky-bar__teaser',
                    'teaser': collections[0].teasers[1]
                } %}

                <span class="vertical-separator sticky-bar__separator"></span>
                
                {% include 'molecules-teaser' with {
                    'styleModifier': 'teaser--size-s teaser--no-medium-on-mobile teaser--alternative-interaction-design sticky-bar__teaser',
                    'teaser': collections[0].teasers[2]
                } %}
            {% endblock %}
        </div>
    </div>
</div>
