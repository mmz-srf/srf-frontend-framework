{# MODAL LARGE #}
{% embed "modal.twig" with {
    'id': 'test-modal-5',
    'animation': 'slide-from-bottom',
    'styleModifier': 'modal--bottom',
    'styleModifierModalWrapper': '',
    'withCloseButton': true
} %}
    {% block content %}
        <div class="modal__content-wrapper">
            <h2 class="content-heading js-focus-target">Dies ist ein Beispiel mit viel Inhalt</h2>
            {% include 'atoms-article-text' %}
            {% include 'molecules-expandable-box' with {'styleModifier': ''} %}
            {% include 'organisms-collection' with {
                'collection': {
                    'styleModifier': 'collection--compact-swipeable collection--branded',
                    "title": "News Schweiz",
                    "teasers": collections[0].teasers[0:5]
                }
            } %}
        </div>
    {% endblock %}
{% endembed %}

{% include 'atoms-button' with {
    'styleModifier': '',
    'buttonText': 'Bottom modal large',
    'additionalAttributes': 'data-modal-id="test-modal-5"'
}
%}

