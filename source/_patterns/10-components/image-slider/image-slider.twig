<figure class="image-comparison-figure">
    <h3 class="h-offscreen">Bildvergleich</h3>

    <div class="image-comparison-figure__image-wrapper">
        <img src="{{ images[2].sources.s12.src }}" class="image-comparison-figure__image" alt="" />
        <div class="image-comparison-figure__cover-wrapper">
            <img src="{{ images[3].sources.s12.src }}" class="image-comparison-figure__image image-comparison-figure__image--cover" alt="" />
        </div>

        <img src="../../assets/img/slider-arrows-left.svg" class="image-comparison-figure__slider image-comparison-figure__slider--left" alt="" />
        <img src="../../assets/img/slider-arrows-right.svg" class="image-comparison-figure__slider image-comparison-figure__slider--right" alt="" />

    </div>

    <a class="h-offscreen h-offscreen-focusable image-comparison-figure__move-left" href="#">Regler nach links verschieben</a>
    <a class="h-offscreen h-offscreen-focusable image-comparison-figure__move-right" href="#">Regler nach rechts verschieben</a>

    <figcaption class="media-caption">
        <span class="media-caption__title">
            {{ images[0].caption.title }}
        </span>
        <span class="media-caption__description">
            {{ images[0].caption.description }}
        </span>
        <span class="media-caption__source">
            {{ images[0].caption.source }}
        </span>
    </figcaption>
</figure>