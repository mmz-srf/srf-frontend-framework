<div class="list listicle {{ styleModifier }}">
    <h2 class="listicle__title">Listicle</h2>
    <ol class="listicle__elements-wrapper">
        <li class="listicle__element">
            <h4 class="listicle__element-title">{{ articleText.title }}</h4>
            <div class="listicle__element-lead">
                {{ articleHeader.lead }}
            </div>
            <div class="listicle__element-media">
                {% include 'components-image-figure' with { 'imageCaptionStyle': 'media-caption--no-bg'} %}
            </div>
            <div class="listicle__element-content">
                {{ articleText.text }}
            </div>
            <div class="listicle__element-link">
                {% include 'elements-block-link' with {'styleModifier': 'block-link'} %}
            </div>
        </li>
        <li class="listicle__element">
            <h4 class="listicle__element-title">{{ articleText.title }}</h4>
            <div class="listicle__element-media">
                {% include 'components-video' %}
            </div>
            <div class="listicle__element-content">
                {{ articleText.text }}
            </div>
            <div class="listicle__element-link">
                {% include 'elements-block-link' with {'styleModifier': 'block-link--external'} %}
            </div>
            <div class="listicle__element-source">Somewhere</div>
        </li>
    </ol>
</div>