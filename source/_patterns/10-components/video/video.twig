<figure class="article-media">
    <a class="article-media__link" href="{{ video.player_url }}/srf/popup?urn={{ video.urn }}&autoplay=true">

        <img alt=""
             sizes="100vw"
             srcset="/assets/demo/img/bild_s8.jpg 640w,
                 /assets/demo/img/bild_s8_retina.jpg 1248w,
                 /assets/demo/img/bild_s12.jpg 944w,
                 /assets/demo/img/bild_s12_retina.jpg 1888w,
                 /assets/demo/img/bild_mobile_max.jpg 320w"
             src="/assets/demo/img/bild_s8.jpg">

        <div class="article-media__link-meta">
            <img class="article-media__play-icon" src="/assets/demo/img/video-play.svg" width="72" height="72" alt="">
            <span class="article-media__length">{{ video.length }}</span>
        </div>
    </a>

    <figcaption class="media-caption media-caption--video">
        <span class="media-caption__title">{{ video.title }}</span>
        <span class="media-caption__description media-caption__description--video">Aus <strong>{{ video.show.title }}</strong> vom {{ video.show.date|date("d.m.Y")  }}</span>
    </figcaption>

</figure>