<figure class="article-video">
    <a class="article-video__link" href="{{ video.player_url }}/srf/popup?urn={{ video.urn }}&autoplay=true">

        <img alt=""
             sizes="100vw"
             srcset="/assets/demo/img/bild_s8.jpg 640w,
                 /assets/demo/img/bild_s8_retina.jpg 1248w,
                 /assets/demo/img/bild_s12.jpg 944w,
                 /assets/demo/img/bild_s12_retina.jpg 1888w,
                 /assets/demo/img/bild_mobile_max.jpg 320w"
             src="/assets/demo/img/bild_s8.jpg">

        <div class="article-video__link-meta">
            <img class="article-video__play-icon" src="/assets/demo/img/video-play.svg" width="72" height="72" alt="">
            <span class="article-video__length">{{ video.length }}</span>
        </div>
    </a>

    <figcaption class="article-video__caption">
        <div class="article-video__title">{{ video.title }}</div>
        <div class="article-video__show">{% if video.show.title is defined %}Aus <strong>{{ video.show.title }}</strong> {% endif %}vom {{ video.show.date|date("d.m.Y")  }}</div>
        {% if video.show.homepageUrl is defined and video.show.homepageUrl != '' %}
            <a href="{{ video.show.homepageUrl }}" class="article-video__show-link">{{ video.show.title }}</a>{% endif %}
    </figcaption>
</figure>