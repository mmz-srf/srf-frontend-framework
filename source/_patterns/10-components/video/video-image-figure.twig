{% if styleModifier == 'RelatedEpisodes' %}
    <div class="article-video__wrapper">
        {% block video_image_related_episodes %}
            <img class="image-figure__image"
                 alt="{{ 'Video'|trans }} «{{ video.title }}» {{ 'abspielen'|trans }}" {# this should go into the image container (cms) #}
                 title="{{ 'Video'|trans }} «{{ video.title }}» {{ 'abspielen'|trans }}"
                 sizes="100vw"
                 srcset="{% for source in video.img_srcset %}
                            {{ source.src }} {{ source.width }}w
                            {{ loop.last ? '' : ',' }}
                         {% endfor %}"
                 src="{{ video.img_src }}">
        {% endblock %}

        {% block plain_play_icon %}
            {% include 'elements-play-icon' with { 'media': 'video' } %}
        {% endblock %}
    </div>
{% else %}
    <figure class="image-figure {{ styleModifier }}">
        <div class="{% if styleModifier == 'video--playing' %}article-video__player{% else %}image-figure__image-wrapper{% endif %}">
            {% block video_image %}
                <img class="image-figure__image"
                     alt="{{ 'Video'|trans }} «{{ video.title }}» {{ 'abspielen'|trans }}"
                     title="{{ 'Video'|trans }} «{{ video.title }}» {{ 'abspielen'|trans }}"
                     sizes="100vw"
                     srcset="{% for source in video.img_srcset %}
                            {{ source.src }} {{ source.width }}w
                            {{ loop.last ? '' : ',' }}
                         {% endfor %}"
                     src="{{ video.img_src }}">
            {% endblock %}

            {% block image_carousel_counter %}
                {% if currentIndex and totalCount %}
                    {% include 'elements-carousel-counter' with { 'currentIndex': currentIndex, 'totalCount': totalCount } %}
                {% endif %}
            {% endblock %}

            {% include 'components-play-icon-with-runtime' with { 'media': 'video', 'runtime': video.length } %}
        </div>
    </figure>
{% endif %}
