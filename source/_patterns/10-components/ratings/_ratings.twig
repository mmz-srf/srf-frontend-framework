{% macro ratingstars(ratings_index,answer_index,answer_title,answer_description,media_options) %}
                {% if media_options is not empty %}
                    {% include "components-media" with media_options %}
                {% endif %}
                <div class="ratings-wrapper">
                    <p class="poll-option-label__title">{{answer_title}} {{answer_index}}</p>
                    {% if answer_description %}
                    <p class="poll-option-label__description">{{answer_description}}</p>
                    {% endif %}
                    <div class="ratingstars">
                        <ol class="ratingstars-list">
                            {% for answers in 1..5 %}
                            <li class="ratingstars__elem" data-ratings_index="{{ratings_index}}" data-answer_index="{{answer_index}}" data-star_index="{{loop.index}}">
                                <input type="radio" id="star{{ratings_index}}-{{answer_index}}-{{loop.index}}" name="ratingStar{{ratings_index}}-{{answer_index}}" value="{{loop.index}}" class="ratingstars__checkbox" />
                                <label for="star{{ratings_index}}-{{answer_index}}-{{loop.index}}">
                                    <svg class="ratingstars__star ratingstars__star--{{loop.index}} ratingstars__star--{{ratings_index}}-{{answer_index}}-{{loop.index}}" viewBox="0 0 37 37" version="1.1" xmlns="http://www.w3.org/2000/svg" aria-labelledby="title"><title>Ein Stern</title>
                                        <path d="M36.5,18.5 C36.5,28.4409655 28.4422069,36.5 18.5,36.5 C8.55903448,36.5 0.5,28.4409655 0.5,18.5 C0.5,8.55903448 8.55903448,0.5 18.5,0.5 C28.4422069,0.5 36.5,8.55903448 36.5,18.5 Z M18.5,7.94827586 L15.3965517,15.3965517 L7.32758621,15.3965517 L13.8038621,20.8486897 L11.0517241,29.6724138 L18.5,24.0862069 L25.9482759,29.6724138 L23.1961379,20.8486897 L29.6724138,15.3965517 L21.6034483,15.3965517 L18.5,7.94827586 Z" class="star_full"></path>
                                        <path d="M18.9980957,17.8153822 L19,24.4567451 L18.996814,24.4543841 C18.9955759,31.0810476 18.9947751,36.4933016 18.9959237,36.4933016 C18.8311592,36.4977576 18.6658418,36.5 18.5,36.5 C8.55903448,36.5 0.5,28.4409655 0.5,18.5 C0.5,8.55903448 8.55903448,0.5 18.5,0.5 C18.6648481,0.5 18.8362161,0.50221557 19,0.506618552 C19.0014432,0.506618552 18.9998085,9.0525965 18.9980957,17.8153822 Z M18.9980957,17.8153822 L18.9956075,9.13773386 L18.5,7.94827586 L15.3965517,15.3965517 L7.32758621,15.3965517 L13.8038621,20.8486897 L11.0517241,29.6724138 L18.5,24.0862069 L18.996814,24.4543841 C18.9972127,22.3205823 18.9976568,20.0608639 18.9980957,17.8153822 Z" class="star_half" fill-opacity="0"></path>
                                    </svg>
                                </label>
                            </li>
                            {% endfor %}
                        </ol>
                        <p class="resultWording resultWording--{{ratings_index}}-{{answer_index}}"><strong><span class="resultNumber--js">0.0</span> Sterne</strong> / Ihre Wertung: <span class="myNumber--js">0</span> Sterne</p>
                    </div>
                </div>
{% endmacro %}

