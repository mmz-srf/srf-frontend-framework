<section class="listmodule">
    <h1 class="listmodule__title">{{list.title}}</h1>
    <ul class="listmodule__list">
        <li class="listmodule__item">
            <figure class="listmodule__itemFigure">
                <div class="listmodule__itemMediaWrapper"><img src="{{image.sources.s8.src}}" class="listmodule__itemMedia" /></div>
                <figcaption class="listmodule__itemSource h-show-tabletup"><span class="h-offscreen">Bild: </span><span class="listmodule__itemSourceName">Keystone</span></figcaption>
            </figure>
            <div class="listmodule__itemTextblock">
                <h2 class="listmodule__itemTitle">{{list.elements[0].title}}</h2>
                <p class="listmodule__itemBody">{{list.elements[0].body}}</p>
                {% include 'elements-infoline' with {'styleModifier': 'h-show-mobile', 'infolineSource': 'true', 'infolineElem': infolines.image} %}
            </div>
        </li>
        <li class="listmodule__item">
            <figure class="listmodule__itemFigure">
                <div class="listmodule__itemMediaWrapper"><img src="{{image.sources.s8.src}}" class="listmodule__itemMedia" /></div>
                <figcaption class="listmodule__itemSource h-show-tabletup"><span class="h-offscreen">Video: </span>Vom 29.8.2016</figcaption>
            </figure>
            <div class="listmodule__itemTextblock">
                <h2 class="listmodule__itemTitle">{{list.elements[1].title}}</h2>
                <p class="listmodule__itemBody">{{list.elements[1].body}}</p>
                {% include 'elements-infoline' with {'styleModifier': 'h-show-mobile', 'infolineElem': infolines.video} %}
            </div>
        </li>
        <li class="listmodule__item">
            <figure class="listmodule__itemFigure">
                <div class="listmodule__itemMediaWrapper"><img src="{{image.sources.s8.src}}" class="listmodule__itemMedia" /></div>
                <figcaption class="listmodule__itemSource h-show-tabletup"><span class="h-offscreen">Bild: </span><span class="listmodule__itemSourceName">Keystone</span></figcaption>
            </figure>
            <div class="listmodule__itemTextblock">
                <h2 class="listmodule__itemTitle">{{list.elements[0].title}}</h2>
                <p class="listmodule__itemBody">{{list.elements[0].body}}</p>
                {% include 'elements-infoline' with {'styleModifier': 'h-show-mobile', 'infolineSource': 'true', 'infolineElem': infolines.image} %}
            </div>
        </li>
    </ul>
</section>