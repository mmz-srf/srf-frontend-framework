<section class="listmodule">
    <h1 class="listmodule__title">{{list.title}}</h1>
    <ul class="listmodule__list">
        <li class="listmodule__item">
            {% include 'components-image-figure' with {'styleModifier': 'image-figure--simple'} %}
            <div class="listmodule__itemTextblock">
                <h2 class="listmodule__itemTitle">{{list.elements[0].title}}</h2>
                <p class="listmodule__itemBody">{{list.elements[0].body}}</p>
                {% include 'elements-infoline' with {'styleModifier': 'infoline--nospacing h-show-mobile', 'infolineSource': 'true', 'infolineElem': infolines.imageTag} %}
            </div>
        </li>
        <li class="listmodule__item">
            {% include 'components-video' with {'styleModifierMain': 'article-video--simple', 'styleModifier': 'image-figure--simple'} %}
            <div class="listmodule__itemTextblock">
                <h2 class="listmodule__itemTitle">{{list.elements[1].title}}</h2>
                <p class="listmodule__itemBody">{{list.elements[1].body}}</p>
                {% include 'elements-infoline' with {'styleModifier': 'infoline--nospacing h-show-mobile', 'infolineElem': infolines.videoTagLong} %}
            </div>
        </li>
        <li class="listmodule__item">
            {% include 'components-image-figure' with {'styleModifier': 'image-figure--simple'} %}
            <div class="listmodule__itemTextblock">
                <h2 class="listmodule__itemTitle">{{list.elements[0].title}}</h2>
                <p class="listmodule__itemBody">{{list.elements[0].body}}</p>
                {% include 'elements-infoline' with {'styleModifier': 'infoline--nospacing h-show-mobile', 'infolineSource': 'true', 'infolineElem': infolines.imageTag} %}
            </div>
        </li>
    </ul>
</section>