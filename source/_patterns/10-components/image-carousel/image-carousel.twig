<div class="carousel carousel__js">
    {% for image in images %}
        <div class="carousel__item">
            {% include 'components-image-figure' with {'styleModifier': imageCaptionStyle, 'images': [image] } %}
            <span class="carousel__counter"> {{ loop.index }} / {{ loop.length }} </span>
        </div>
    {% endfor %}
</div>

