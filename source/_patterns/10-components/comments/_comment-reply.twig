<form class="reply-container comment--reply comments--shrink" id="comment_form"
      name="comment_form" method="{{ form.method|default("get") }}">
    <label class="h-offscreen" form="comment_form">{{ replies.title|default("Einen Kommentar schreiben") }}</label>
    <fieldset class="reply">
        <div class="reply__highlights"></div>
        <textarea class="reply__textarea" name="reply" cols="70" rows="7"></textarea>
        <p class="reply-info">
            <span class="reply-info__initial">{{ replies.please_respect|default("Bitte beachten Sie unsere") }}
                &nbsp;</span>
            <a class="reply-info__netiquette"
               href="//srf.ch/netiquette">{{ default.nettiquette|default("Netiquette") }}</a>
            <span class="reply-info__count">
                <span class="js-comment-count-up">500</span>&nbsp;{{ replies.letters|default("Zeichen") }}
            </span>
        </p>{# depth? ==> > 1 doesn't exist ==> no "antwort" Link! #}
        <input type="hidden" name="reply_to" id="comment_reply_to" value="">{# replytocomment #}
        <input type="hidden" name="user_email" id="comment_user_email" value="">{# email #}
        <input type="hidden" name="node_id" id="comment_node_id" value="">{# node_id #}
        <input type="hidden" name="reply_depth" id="comment_reply_depth" value="">{# node_id #}
    </fieldset>
    {% include 'elements-submit-button' %}
</form>
