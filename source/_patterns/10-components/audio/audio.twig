<a class="article-audio__link" href="{{ audio.player_url }}/srf/popup?urn={{ audio.urn }}&autoplay=true">

    <figure class="article-audio">
        <div class="article-audio__wrapper">
            <img class="image-figure__image"
                 alt="Audio «{{ audio.title }}» abspielen" {# this should go into the image container (cms) #}
                 sizes="100vw"
                 srcset="../../assets/demo/img/bild0/bild_s8.jpg 640w,
                         ../../assets/demo/img/bild0/bild_s8_retina.jpg 1248w,
                         ../../assets/demo/img/bild0/bild_s12.jpg 944w,
                         ../../assets/demo/img/bild0/bild_s12_retina.jpg 1888w,
                         ../../assets/demo/img/bild0/bild_mobile_max.jpg 320w"
                 src="../../assets/demo/img/bild0/bild_s8.jpg">

            <img class="article-audio__play-icon" src="../../assets/img/audio-play.svg" width="72" height="72" alt="">
        </div>
        <figcaption class="media-caption media-caption--audio">
            <div class="media-caption__title media-caption__title--audio">{{ audio.title }}</div>
            <div class="media-caption__source media-caption__source--audio">{{ audio.length }} min, aus <strong>{{ audio.show.title }}</strong> vom {{ video.show.date|date("d.m.Y")  }}</div>
        </figcaption>
    </figure>
</a>