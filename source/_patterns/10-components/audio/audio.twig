<figure class="article-media">
    <a class="article-media__link" href="{{ audio.player_url }}/srf/popup?urn={{ audio.urn }}&autoplay=true">

        <img alt=""
             sizes="100vw"
             srcset="/assets/demo/img/bild_s8.jpg 640w,
                 /assets/demo/img/bild_s8_retina.jpg 1248w,
                 /assets/demo/img/bild_s12.jpg 944w,
                 /assets/demo/img/bild_s12_retina.jpg 1888w,
                 /assets/demo/img/bild_mobile_max.jpg 320w"
             src="/assets/demo/img/bild_s8.jpg">

        <div class="article-media__link-meta">
            <img class="article-media__play-icon" src="/assets/demo/img/audio-play.svg" width="72" height="72" alt="">
            <span class="article-media__length">{{ audio.length }}</span>
        </div>
    </a>

    <figcaption class="article-media__caption">
        <div class="article-media__title">{{ audio.title }}</div>
        <div class="article-media__show">Aus <strong>{{ audio.show.title }}</strong> vom {{ audio.show.date|date("d.m.Y")  }}</div>
        <a href="{{ audio.show.homepageUrl }}" class="article-media__show-link">{{ audio.show.title }}</a>
    </figcaption>
</figure>