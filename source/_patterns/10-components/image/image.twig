<figure class="article__image">
    <img alt=""
         sizes="100vw"
         class="still-"
         srcset="/assets/demo/img/bild_s8.jpg 640w,
                 /assets/demo/img/bild_s8_retina.jpg 1248w,
                 /assets/demo/img/bild_s12.jpg 944w,
                 /assets/demo/img/bild_s12_retina.jpg 1888w,
                 /assets/demo/img/bild_mobile_max.jpg 320w"
         src="/assets/demo/img/bild_s8.jpg">
    <figcaption class="article__image__caption">
        <span class="article__image__title">
            {{ image.title }}
        </span>
        <span class="article__image__description">
            {{ image.description }}
        </span>
        <span class="article__image__source">
            {{ image.source }}
        </span>
    </figcaption>
</figure>