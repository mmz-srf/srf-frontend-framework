{% import '_poll.twig' as option %}
{% set pollIndex = pollIndex|default(1) %}
<form id="poll-ID{{ pollIndex }}" class="poll-wrapper poll--setup {{ styleModifier }}" name="poll_{{ pollIndex }}" method="get" data-src="../../assets/demo/poll-data.json">
    <fieldset class="poll-fieldset">
        {# images here only if no media is present below #}
        {% set media_options = { "media": { "type": "bild", "title" : images[0].caption.title, "length" : 0, "player_url": null, "urn" : null }, "image" : images[1] } %}
        {% include "_media.twig" with media_options %}
        <legend class="poll-fieldset__legend">{{ poll.description }}</legend>
        <ol class="poll">
            {% for question in 0..2 %}
            <li class="poll-option">
                {% if loop.index0 == 1 %}
                    {{ option.question_label( pollIndex, loop.index0, poll.answers.1.title, poll.answers.1.description ) }}
                {% else %}
                    {{ option.question_label( pollIndex, loop.index0, poll.answers.0 ) }}
                {% endif %}
                {{ option.rating_box( loop.index0, poll.answers.0, {}) }}
            </li>
            {% endfor %}
        </ol>
        {{ option.form_submit(poll, styleModifier) }}
    </fieldset>
</form>