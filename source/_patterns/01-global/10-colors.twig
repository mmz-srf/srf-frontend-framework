      <span class="demo-swatch" style="background: {{ colorCode.rgba }}"></span>
      <span class="demo-label">
        <strong class="select">{{ colorName }}</strong><br />
        <span class="select">{{ colorCode.hex }}</span><br />
        <span class="select">{{ colorCode.rgba }}</span>
      </span>
    </li>
  {% endfor %}
</ul>