<span class="icon-button {{ styleModifier|default("") }}"
      {% if expanderId %} data-expander-id={{ expanderId }} {% endif %}>
    <span class="h-offscreen">{{ screenReaderText|default("Screenreader-Text für Schaltfläche") }}</span>
    <span class="icon-button__icon">
        {% include 'atoms-svg-icon' with {'styleModifier': iconStyleModifier|default("") } %}
    </span>
    {% if buttonText %}
        <span class="icon-button__text" aria-hidden="true" role="presentation">{{ buttonText }}</span>
    {% endif %}
</span>
