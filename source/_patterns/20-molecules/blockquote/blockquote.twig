<blockquote class="blockquote {{ styleModifier }}">
    <div class="blockquote__quote">
        <span class="blockquote__text">{{ blockquote.text }}</span>
    </div>
    <footer class="blockquote__footer">
        <cite>
            <span class="blockquote__author">{{ blockquote.author }}</span>
            <span class="blockquote__function">{{ blockquote.function }}</span>
        </cite>
    </footer>
</blockquote>