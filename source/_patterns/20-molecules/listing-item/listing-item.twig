<li class="listing-item">
    <div class="listing-item__media">
        {% include 'molecules-image-figure' with {'styleModifier': 'image-figure--simple'} %}
    </div>
    <div class="listing-item__block">
        <h3 class="listing-item__heading">{{articleText.title}}</h3>
        <p class="listing-item__content">{{articleText.text}}</p>
        {% include 'atoms-infoline' with {'styleModifier': 'infoline--nospacing h-show-mobile', 'infolineSource': 'true', 'infolineElem': image.caption.source} %}
    </div>
</li>
<li class="listing-item">
    <div class="listing-item__media">
        {% include 'molecules-medium--compact' with {'mediumType': 'video'} %}
    </div>
