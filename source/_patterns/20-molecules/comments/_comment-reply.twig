<form class="reply-container comment--hide comments--shrink js-comment_place"
      name="comment_form" method="{{ form.method|default("get") }}">
    <fieldset class="reply">
        <legend class="h-offscreen">{{ 'Einen Kommentar schreiben' }}</legend>
        <div class="reply__highlights"></div>
        <textarea class="reply__textarea{# reply--mini #}" name="reply" cols="70" rows="7"></textarea>
        <p class="reply-info">
            <span class="reply-info__count">
                <span class="h-offscreen">{{ 'verf√ºgbar sind noch' }}</span>
                <span class="js-comment-count-up">500</span>&nbsp;{{ 'Zeichen' }}
            </span>
        </p>
        <input type="hidden" name="reply_to" class="js-comment_reply_to" value="0">{# replytocomment #}
        <input type="hidden" name="user_token" class="js-comment_user_token" value="0">{# replytocomment #}
    </fieldset>

    <span class="comments-header__text comments-header__text--reply">
        Mit dem Absenden dieses Kommentars stimme ich der
        <a href="//srf.ch/netiquette">Netiquette</a>
        von srf.ch.zu
    </span>

    {% include 'atoms-button' with { 'styleModifier' : 'button--inactive', 'buttonText' : 'Kommentieren' } %}
</form>
