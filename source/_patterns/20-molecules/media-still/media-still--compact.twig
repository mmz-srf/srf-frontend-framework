{% set mediumType = mediumType|default('video') %}
<div class="media-still media-still--compact js-medium-hover">
    <div class="media-still__image">
        {% include 'atoms-image' with { 'styleModifier' : 'image--media-still' } %}
    </div>
    <div class="media-still__icon">
        {% include 'atoms-play-icon-ng' with { 'styleModifier' : 'play-icon-ng--' ~ mediumType } %}
        {% include 'atoms-spinner' with { 'styleModifier' : 'spinner--white-dash spinner--loading-medium' } %}
    </div>
    {% if mediumType != 'audio' %}
    <div class="media-still__indicator">
        {% include 'atoms-media-time-indicator' with { 'styleModifier' : '' } %}
    </div>
    {% endif %}
</div>