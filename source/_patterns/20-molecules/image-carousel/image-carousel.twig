<div class="carousel-container">
    <div class="carousel carousel__js" id="{{ image_carousel.ID }}">
        {% for image in images %}
            <div class="carousel__item">
                {% include 'molecules-image-figure' with {
                    'styleModifier': imageCaptionStyle ~ " image-figure--indicator",
