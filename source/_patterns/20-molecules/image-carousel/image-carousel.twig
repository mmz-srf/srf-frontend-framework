<h2 class="carousel-title">Bildergalerie Title</h2>
<h3 class="h-offscreen">{{ 'Bildergalerie' }}</h3>
<span class="h-offscreen">{{ 'Bildergalerie enth√§lt' }} {{ images|length }} {{ 'Bilder' }}</span>
<div class="carousel-container">
    <div class="carousel {{ styleModifier|default("") }} js-carousel" id="{{ image_carousel.ID }}">
        {% for image in images %}
            <div class="carousel__item js-carousel-item">
                {% include 'molecules-image-figure' with {
                    'styleModifier': imageCaptionStyle ~ " image-figure--indicator",
                    'images': [image],
                    'currentIndex': loop.index,
                    'totalCount': loop.length,
                } %}
            </div>
        {% endfor %}
    </div>

    {% if 'image-carousel--fancy' in styleModifier|default('') %}
        <div class="image-carousel__expand">
            <img src="data:image/png;base64,">
        </div>
    {% endif %}
</div>
