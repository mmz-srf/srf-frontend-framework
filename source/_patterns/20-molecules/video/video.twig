<a class="article-video__link" href="{{ video.player_url }}/srf/popup?urn={{ video.urn }}&autoplay=true">
    <figure class="article-video {{ styleModifierMain }}">

        {% include 'molecules-video-image-figure' with {
            'styleModifier': styleModifier,
            'images': [images[2]]
            }
        %}

        <figcaption class="media-caption media-caption--video{{ styleModifier == 'RelatedEpisodes' ? '-related-episodes' : '' }}">
            <span class="h-offscreen">{{ video.video ~ ' «' }}</span>
            <div class="media-caption__title media-caption__title--video">{{ video.title }}</div>
            <div class="media-caption__source media-caption__source--video">Aus <strong class="media-caption__source-strong">{{ video.show.title }}</strong> vom {{ video.show.date|date("d.m.Y")  }}</div>
            <span class="h-offscreen">{{ '» ' ~ video.play }}</span>
            {% block player_info %}
                <span class="h-offscreen">{{ video.plays_within_page }}</span>
            {% endblock %}
        </figcaption>
    </figure>
</a>
