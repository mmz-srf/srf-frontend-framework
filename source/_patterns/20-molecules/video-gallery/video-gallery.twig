<div class="media-window-container media-window-container--video-gallery {{ styleModifierGallery }}">
    {% include 'molecules-media-window' %}

    <div class="video-gallery js-video-gallery" id="{{ video_gallery.ID }}" style="visibility:hidden;"
         data-dot-info="{{ video_gallery.slide_select|default(". Slide wählen") }}"
         data-dot-current="{{ video_gallery.slide_current|default("Gewählter Slide") }}">

        {% for video in videos %}
            <div class="video-gallery__item js-video-gallery-item">
                {% include 'molecules-medium--video-gallery' %}
            </div>
        {% endfor %}
    </div>
</div>
