{% macro ratingstars(ratings_index,answer_index,answer_title,answer_description,media_options) %}
                {% if media_options is not empty %}
                    {% include 'molecules-media' with media_options %}
                {% endif %}
                <div class="ratings-wrapper">
                    <p class="poll-option-label__title">{{answer_title}} {{answer_index}}</p>
                    {% if answer_description %}
                        <p class="poll-option-label__description">{{answer_description}}</p>
                    {% endif %}
                    <div class="ratingstars">
                        <ol class="ratingstars-list">
                            {% for answers in 1..5 %}
                            <li class="ratingstars__elem">
                                <input type="radio" id="star{{ratings_index}}-{{answer_index}}-{{loop.index}}" name="ratingStar{{ratings_index}}-{{answer_index}}" value="{{loop.index}}" class="ratingstars__checkbox" />
                                <label for="star{{ratings_index}}-{{answer_index}}-{{loop.index}}">
                                    <span class="h-offscreen">
                                        {% if loop.index == 1 %}
                                            1 {{ 'Stern'|trans }}
                                        {% else %}
                                            {{loop.index}} {{ 'Sterne'|trans }}
                                        {% endif %}
                                    </span>
                                    <svg class="ratingstars__star ratingstars__star--{{loop.index}} ratingstars__star--{{ratings_index}}-{{answer_index}}-{{loop.index}}" viewBox="0 0 37 37" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M36.5,18.5 C36.5,28.4409655 28.4422069,36.5 18.5,36.5 C8.55903448,36.5 0.5,28.4409655 0.5,18.5 C0.5,8.55903448 8.55903448,0.5 18.5,0.5 C28.4422069,0.5 36.5,8.55903448 36.5,18.5 Z M18.5,7.94827586 L15.3965517,15.3965517 L7.32758621,15.3965517 L13.8038621,20.8486897 L11.0517241,29.6724138 L18.5,24.0862069 L25.9482759,29.6724138 L23.1961379,20.8486897 L29.6724138,15.3965517 L21.6034483,15.3965517 L18.5,7.94827586 Z" class="star-full"></path>
                                        <path d="M18.5,7.948 L21.604,15.396 L29.672,15.396 L23.196,20.849 L25.948,29.672 L18.5,24.086 L18.5,36.5 C28.442,36.5 36.5,28.441 36.5,18.5 C36.5,8.559 28.442,0.5 18.5,0.5 L18.5,7.948 Z" class="star-half"></path>
                                    </svg>
                                </label>
                            </li>
                            {% endfor %}
                        </ol>
                        <p class="resultWording resultWording--{{ratings_index}}-{{answer_index}}"><strong><span class="resultNumber--js">0.0</span> Stern</strong> / Ihre Wertung: <span class="myNumber--js">0</span> Stern</p>
                    </div>
                </div>
{% endmacro %}
