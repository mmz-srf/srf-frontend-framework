{% block audio %}
    <a  id="article-media__{{ audio.elementId }}"
        class="article-audio__link js-media"
        data-mediatype="audio"
        data-assetid="{{ audio.assetId }}">
        <figure class="article-audio {{ styleModifierMain }}">
            <div class="article-audio__wrapper">

                {% block audio_image %}
                    <img class="image-figure__image{{ not audio.img_src ? " image-figure__image--no-image"}}"
                         alt="Audio «{{ audio.title }}» abspielen"
                         title="Audio «{{ audio.title }}» abspielen"
                        {% spaceless %}
                        {% if audio.img_src %}
                          sizes="100vw"
                          srcset="{% for source in audio.img_srcset %}
                             {{ source.src }} {{ source.width }}w
                             {{ loop.last ? '' : ',' }}
                          {% endfor %}"
                          src="{{ audio.img_src }}"
                        {% else %}
                          src="data:image/gif;base64,R0lGODlhAQABAAAAACwAAAAAAQABAAA="
                        {% endif %}
                        {% endspaceless %}
                         >
                {% endblock %}

                {% block play_icon %}
                    {% include 'atoms-play-icon' with {'media': 'audio'} %}
                {% endblock %}

                {% block loading_spinner %}
                    {% include 'atoms-spinner-container' with { 'styleModifier' : 'spinner__circle--dash-white' } %}
                {% endblock %}

            </div>
            {% block audio_caption %}
                <figcaption class="media-caption media-caption--audio">
                    <span class="h-offscreen">Legende:</span>
                    {% if audio.title %}
                        <div class="media-caption__title media-caption__title--audio">{{ audio.title }}</div>
                    {% endif %}

                    <div class="media-caption__source media-caption__source--audio">{{ audio.length }} min,
                        {% if audio.show and audio.show.title %}
                            aus <strong class="media-caption__source-title">{{ audio.show.title }}</strong>
                        {% endif %}
                        vom {{ audio.show.date|date("d.m.Y")  }}
                    </div>
                </figcaption>
            {% endblock %}
        </figure>
        {% block player_wrapper %}
            <div id="article-audio__{{ audio.elementId }}" class="article-audio__player"></div>
        {% endblock %}
    </a>
{% endblock %}
