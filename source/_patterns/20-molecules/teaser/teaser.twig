<div class="teaser {{ styleModifier|default('teaser--size-m teaser--size-s-on-mobile') }}">
    <a class="teaser__main" href="{{ teaser.link|default('#') }}">
        <div class="teaser__medium-wrapper">
            <img class="teaser__medium" src="{{ teaser.image|default('') }}" alt="{{ teaser.title|default('') }}" />
        </div>

        <div class="teaser__content-shimmer h-loading-only">
            {% include 'atoms-shimmer' with {'styleModifier': 'shimmer--overline'} %}
            {% include 'atoms-shimmer' with {'styleModifier': ''} %}
            {% include 'atoms-shimmer' with {'styleModifier': ''} %}
            {% include 'atoms-shimmer' with {'styleModifier': 'shimmer--short'} %}
        </div>

        <div class="teaser__content">
            {% if preKicker %}<span class="h-offscreen">{{ preKicker }}</span>{% endif %}

            <h4 class="teaser__kicker">
                {% if styleModifierLive|default(false) == 'teaser-status-live--live' %}
                    <span class="teaser__live teaser__live--live">
                        <span class="teaser__live__box">{% if live_type == 'Livestream' %}{% include 'atoms-svg-icon' with {'styleModifier': 'svg-icon--tiny-but-small-on-desktop-up svg-icon--play-video-circle-white-tiny-to-small'} %}Live{% else %}Liveticker{% endif %}</span>
                        <span class="teaser__live__box teaser__live__box--time">13:37</span>
                    </span>
                {% endif %}
                {% if styleModifierLive|default(false) == 'teaser-status-live--pre' %}
                    <span class="teaser__live teaser__live--pre">
                        <span class="teaser__live__box">{% if live_type == 'Livestream' %}{% include 'atoms-svg-icon' with {'styleModifier': 'svg-icon--tiny-but-small-on-desktop-up svg-icon--play-video-circle-tiny-to-small'} %}Live{% else %}Liveticker{% endif %}</span>
                        <span class="teaser__live__box teaser__live__box--time">13:37</span>
                    </span>
                {% endif %}

                <span class="teaser__kicker-text">{{ teaser.kicker|default('') }}</span>
            </h4>
            <h3 class="teaser__title">{{ teaser.title|default('') }}</h3>
            <p class="teaser__lead">{{ teaser.lead|default('') }}</p>

            {% set styleModifierStatus = styleModifierStatus|default('') %}
            {% if 'teaser--size-l' in styleModifier or 'teaser--size-xl' in styleModifier %}
                {% set styleModifierStatus = styleModifierStatus ~ ' teaser-status--size-large' %}
            {% endif %}

            {% if styleModifierLive|default('false') %}
            {% include 'molecules-teaser-status-live' with {
                'styleModifier': styleModifierLive,
                'type': live_type|default(''),
                'time': live_time|default('')
            } %}
            {% endif %}

            {% include 'molecules-teaser-status' with {
                'styleModifier': styleModifierStatus,
                'text': status|default('')
            } %}
        </div>
    </a>

    {# space for teaser-links #}
</div>
