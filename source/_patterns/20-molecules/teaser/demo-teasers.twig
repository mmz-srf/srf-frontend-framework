<style>
    .togglable-wrapper {
        max-width: 100%;
        transition: max-width .2s ease-in-out;
    }
    .teaser-demo-wrapper {
        max-width: 320px;
    }
    h2 {
        margin: 20px;
    }
</style>

{% include 'atoms-button' with {'buttonText' : 'Max-Width setzen', 'styleModifier': 'js-toggle-maxWidth'} %}

<h2>S-Teaser</h2>

<div class='js-togglable-wrapper togglable-wrapper'>
    {% include 'molecules-teaser' with {
        "styleModifier": "teaser--s",
        "teaser": collections[0].teasers[0]
    } %}
</div>

