<script>
    let $btn = $(".js-toggle-maxWidth"),
        $togglableWrappers = $(".js-togglable-wrapper");


    $btn.on("click", () => {
        $togglableWrappers.toggleClass('teaser-demo-wrapper');
    });
</script>
