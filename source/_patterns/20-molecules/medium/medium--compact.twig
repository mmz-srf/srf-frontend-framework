{% set mediumType = mediumType|default('audio') %}
<a href="#LINK_TO_PLAYER">
    <div class="medium medium--compact medium--vertical {% if mediumType == 'image' %}medium--no-hover {% endif %}js-medium-hover">
        <div class="medium__object">
            {% if mediumType == 'image' %}
                {% include 'atoms-image' with { 'styleModifier' : 'image--media-still' } %}
            {% elseif mediumType == 'audio' %}
                {% include 'molecules-media-still--compact' %}
            {% else %}
                {% include 'molecules-media-still--compact' %}
            {% endif %}
            {% if showNotice %}<div class="medium__notice"><span class="medium__notice-text">Video nicht mehr verf√ºgbar</span></div>{% endif %}
        </div>
        <div class="medium__caption">
          {% if mediumType == 'audio' %}
            {% include 'molecules-media-caption-audio' with { 'styleModifier' : 'media-caption--compact' } %}
          {% elseif mediumType == 'video' %}
            {% include 'molecules-media-caption-video' with { 'styleModifier' : 'media-caption--compact' } %}
          {% elseif mediumType == 'image' %}
            {% include 'molecules-media-caption' with { 'styleModifier' : 'media-caption--compact' } %}
          {% endif %}
        </div>
    </div>
</a>